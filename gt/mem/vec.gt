type Slice[T] = struct {
    data: T *mut,
    len: Size,
}

fn len(self: Slice[T]) -> Size =
    self.len
end

-- TODO: get_mut()
fn get(self: Slice[T] &, i: Size) -> Option[T &] =
    if self.len >= i then
        None
    else
        -- TODO: i needs to be an Offset, not a Size.
        Some(self.data.index(i) &)
    end
end


