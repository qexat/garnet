--- Make the closure for iterating over an array
fn into_iter(|Item| arr []Item) Iterator(Item) =
  let mut counter = 0
  let thunk = fn() Option(Item) =
    if counter >= arr:len() then
      Option.None {}
    else
      let vl = arr[counter]
      counter += 1
      Option.Some vl
    end
  end
  thunk
end

